@{
    ViewData["Title"] = "Home Page";
}
@model ParkView.Models.SearchForm;
@section Scripts {
    <script src="~/frontend/main.js" asp-append-version="true"></script>
    <script src="~/frontend/polyfills.js"></script>
    <script src="~/frontend/runtime.js"></script>
    <script src="~/frontend/vendor.js"></script>
}

@section head { 
    <link href="~/frontend/styles.css" rel="stylesheet" />
}

@*<app-root></app-root>*@


<form class="form" method="Post" asp-controller="Home" asp-action="Index">
    <div class="filter">
        <div class="filter-item">
            <p>Destination</p>
            <input  asp-for="destination" class="form-control" type="text" placeholder="Destination" />
        </div>
        <div class="filter-item">
            <p>Check-in</p>
            <input asp-for="check_in" class="form-control" type="date" placeholder="Check-in" />
        </div>
        <div class="filter-item">
            <p>Check-out</p>
            <input asp-for="check_out" class="form-control" type="date" placeholder="Check-out" />
        </div>
        <div class="filter-item">
            <p>Rooms</p>
            <input asp-for="numberRooms" class="form-control" type="number" placeholder="Number of Rooms Required" />
        </div>
        <div class="filter-item">
            <p>Adults</p>
            <input asp-for="adultCount" class="form-control" type="number" placeholder="Adult Count" />
        </div>
        <div class="filter-item">
            <p>Children</p>
            <input asp-for="childrenCount" class="form-control" type="number" placeholder="Children Count" />
        </div>
        <div class="filter-item">
            <p><i class="bi-search">Search</i></p>
            <button style="border-radius : 5px;" type="submit" class="btn-outline-dark">Search</button>
        </div>
    </div>
</form>

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img  height="400" src="https://www.tourmyindia.com/destination_india/image/north-india-banner.webp" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img height="400" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTXv1_nEMZiz5I-_hqjHscWqxEzx14oKYJnVw&usqp=CAU" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img height="400" src="https://ichef.bbci.co.uk/news/976/cpsprodpb/14AF0/production/_126902748_gettyimages-1031430214-170667a.jpg" class="d-block w-100" alt="...">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<app-root></app-root>